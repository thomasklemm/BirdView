/ tweet stream
= logo_header icon_tag(:twitter, 'Stream')

div#tweets class="stream tweets"
  = render partial: 'conversation_for_tweet', collection: @tweets, as: :tweet, cache: Proc.new {|tweet| digest('conversation_for', tweet, tweet.full_conversation) }

/ pagination
= paginate @tweets

