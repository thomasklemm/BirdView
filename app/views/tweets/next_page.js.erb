// next page js

// append tweets / conversations
var conversations = '<%= j render_conversation_for_tweets(@tweets) %>';
Tweets.appendTweets(conversations);

// update pagination
<% new_min_id = @tweets.map(&:twitter_id).min %>
<% if new_min_id %>
  $('#tweets').attr('data-min-id', '<%= new_min_id %>');
<% end %>

// Update pagination text
<% if @tweets.any? %>
  $('.tweets-pagination').text('Loading more...');
<% else %>
  $('.tweets-pagination').text('Finished.');
<% end %>

