// incoming tweets js

// append conversations
$conversations = $('<%= j render_cached_conversation_for_tweets(@tweets) %>');
$('#tweets').append($conversations);

// pagination
<% new_pagination = @tweets.size > 0 ? j(render("incoming_pagination", tweets: @tweets)) : '' %>
$('.pagination').replaceWith('<%= new_pagination %>');

// initialize timestamps
$conversations.find("abbr.timeago").timeago();
