// Inline reply form
$tweet = $('#<%= dom_id(@status.reply_to_tweet) %>');
$tweet.find('.new-status-wrapper').remove();

// Reply form
$tweet.find('.forms').append('<%= j render("form") %>')
// Bootstrap angular app
angular.bootstrap('html');

// Event
$event = $('<%= j render(@event.decorate) %>');
